#include <stdio.h>
#include<locale.h>
#include <windows.h>
char kul1[7] , kul2[7], kul3[7];
char ti1[2], ti2[2], ti3[2];
int s1, s2, s3;
float y1, y2, y3;




 int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	setlocale(LC_ALL, "RUS");
	printf("1. Введите: наименование, тип, посевнуювную площядь, урожайность>");

	scanf_s("%s %s %d %f", kul1, 7, &ti1, 2, &s1, &y1);

	printf("2. Введите: наименование, тип, посевнуювную площядь, урожайность>");

	scanf_s("%s %s %d %f", kul2, 7, &ti2, 2, &s2, &y2);	

	printf("3. Введите: наименование, тип, посевнуювную площядь, урожайность>");

	scanf_s ("%s %s %d %f", kul3, 7, &ti3, 2, &s3, &y3);

	printf("------------------------------------------------------\n");
	printf("|Сельскохозяйственные культуры                       |\n");
	printf("------------------------------------------------------\n");
	printf("|Наименование | тип | посевная площадь | урожайность |\n");
	printf("------------------------------------------------------\n");
	printf("%-13s | %-3s | %-16d | %-11f | \n", kul1, ti1, s1, y1);
	printf("------------------------------------------------------\n");
	printf("%-13s | %-3s | %-16d | %-11f | \n", kul2, ti2, s2, y2);
	printf("------------------------------------------------------\n");
	printf("%-13s | %-3s | %-16d | %-11f | \n", kul3, ti3, s3, y3);
	printf("------------------------------------------------------\n");
